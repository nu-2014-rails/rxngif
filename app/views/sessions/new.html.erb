<h1>Login</h1>

<div class="container">
  
  <form action="/sessions/create">
    <div class="form-group">
      <label for="email" class="col-md-2 col-md-offset-3">Email:</label>
      <div class="col-md-4">
        <input class="form-control" id="email" type="text" placeholder="name@domain.com" name="email">
      </div>
    </div>
    <div class="form-group">
      <label for="password" class="col-md-2 col-md-offset-3">Password:</label>
      <div class="col-md-4">
        <input class="form-control" id="password" type="password" name="password">
      </div>
    </div>
    <div class="form-group col-md-6 col-md-offset-5">
      <input type="submit" class="btn btn-primary">
    </div>
  </form>
  
</div>